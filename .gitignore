# Create/update .gitignore
cat > .gitignore << 'EOF'
# Python
__pycache__/
*.py[cod]
*$py.class
*.so
.Python

# Virtual environments
venv/
env/
ENV/

# Environment variables
.env
.env.local

# EasyOCR cache
easyocr/

# Log files
log_images/
logs/
*.log

# IDE
.vscode/
.idea/
*.swp
*.swo

# OS
.DS_Store
Thumbs.db

# Test files
test_*.py
compare_*.py
debug_*.py
quick_test.py
visualize_*.py

# Receipt images (test data)
*.jpg
*.jpeg
*.png
*.pdf
!static/**/*.jpg
!static/**/*.png
EOF

# Check status
git status